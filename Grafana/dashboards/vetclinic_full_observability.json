{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "refresh": "5s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["vetclinic", "blockchain", "prometheus"],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "node",
        "label": "Node (instance)",
        "hide": 0,
        "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
        "definition": "label_values(up, instance)",
        "query": { "query": "label_values(up, instance)", "refId": "A" },
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "sort": 1,
        "current": { "selected": false, "text": "All", "value": ".*" }
      },
      {
        "type": "query",
        "name": "path",
        "label": "Path",
        "hide": 0,
        "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
        "definition": "label_values(http_requests_total, path)",
        "query": { "query": "label_values(http_requests_total, path)", "refId": "A" },
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "sort": 1,
        "current": { "selected": false, "text": "All", "value": ".*" }
      }
    ]
  },
  "time": { "from": "now-15m", "to": "now" },
  "timezone": "",
  "title": "VetClinic Full Observability",
  "uid": "vetclinic-full-observability",
  "version": 1,
  "weekStart": "",
  "panels": [
    {
      "type": "stat",
      "title": "Targets UP",
      "description": "Ile targetów Prometheusa jest UP.",
      "gridPos": { "h": 5, "w": 4, "x": 0, "y": 0 },
      "id": 1,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "expr": "count(up{instance=~\"$node\"} == 1)", "range": true, "editorMode": "code" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": { "mode": "absolute", "steps": [ { "color": "red", "value": null }, { "color": "green", "value": 1 } ] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "stat",
      "title": "Chain height (max)",
      "description": "Maksymalna wysokość chaina w klastrze.",
      "gridPos": { "h": 5, "w": 4, "x": 4, "y": 0 },
      "id": 2,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "expr": "max(blockchain_chain_height{instance=~\"$node\"})", "range": true, "editorMode": "code" }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "stat",
      "title": "Mempool (sum)",
      "description": "Suma mempool_size po nodach (jeśli replikujecie mempool, to będzie się dublować).",
      "gridPos": { "h": 5, "w": 4, "x": 8, "y": 0 },
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "expr": "sum(blockchain_mempool_size{instance=~\"$node\"})", "range": true, "editorMode": "code" }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "stat",
      "title": "TX submitted/sec (sum)",
      "description": "Tempo przyjmowania transakcji (rate po 1m).",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 },
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "expr": "sum(rate(tx_submitted_total{instance=~\"$node\"}[1m]))", "range": true, "editorMode": "code" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "stat",
      "title": "HTTP error ratio (5xx)",
      "description": "Udział 5xx w całym ruchu (rate 5m).",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 },
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "refId": "A",
          "editorMode": "code",
          "range": true,
          "expr": "sum(rate(http_requests_total{instance=~\"$node\",status=~\"5..\",path=~\"$path\"}[5m])) / clamp_min(sum(rate(http_requests_total{instance=~\"$node\",path=~\"$path\"}[5m])), 1e-9)"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percentunit", "decimals": 3 }, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },

    {
      "type": "timeseries",
      "title": "HTTP requests/sec by node+path",
      "description": "Ruch HTTP, rozbity po instance i path (filtrowalne zmiennymi).",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 5 },
      "id": 10,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "refId": "A",
          "editorMode": "code",
          "range": true,
          "expr": "sum by (instance, path) (rate(http_requests_total{instance=~\"$node\",path=~\"$path\"}[1m]))",
          "legendFormat": "{{instance}} {{path}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },

    {
      "type": "timeseries",
      "title": "HTTP latency p50 (by path)",
      "description": "Median latency z histogramu http_request_duration_seconds_bucket.",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 15 },
      "id": 11,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "refId": "A",
          "editorMode": "code",
          "range": true,
          "expr": "histogram_quantile(0.50, sum by (le, path) (rate(http_request_duration_seconds_bucket{instance=~\"$node\",path=~\"$path\"}[5m])))",
          "legendFormat": "p50 {{path}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP latency p95 (by path)",
      "description": "p95 latency z histogramu http_request_duration_seconds_bucket.",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 15 },
      "id": 12,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "refId": "A",
          "editorMode": "code",
          "range": true,
          "expr": "histogram_quantile(0.95, sum by (le, path) (rate(http_request_duration_seconds_bucket{instance=~\"$node\",path=~\"$path\"}[5m])))",
          "legendFormat": "p95 {{path}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },

    {
      "type": "timeseries",
      "title": "Chain height per node",
      "description": "Wysokość chaina per instance.",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 25 },
      "id": 20,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "editorMode": "code", "range": true, "expr": "max by (instance) (blockchain_chain_height{instance=~\"$node\"})", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" }, "tooltip": { "mode": "single", "sort": "none" } }
    },
    {
      "type": "timeseries",
      "title": "Mempool size per node",
      "description": "Mempool per instance.",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 25 },
      "id": 21,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "editorMode": "code", "range": true, "expr": "max by (instance) (blockchain_mempool_size{instance=~\"$node\"})", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" }, "tooltip": { "mode": "single", "sort": "none" } }
    },

    {
      "type": "timeseries",
      "title": "TX submitted/sec per node",
      "description": "Tempo tx_submitted_total per instance (rate 1m).",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 34 },
      "id": 30,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "editorMode": "code", "range": true, "expr": "sum by (instance) (rate(tx_submitted_total{instance=~\"$node\"}[1m]))", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" }, "tooltip": { "mode": "single", "sort": "none" } }
    },
    {
      "type": "timeseries",
      "title": "Chain verify/sec per node (by result)",
      "description": "Rate chain_verify_total z etykietą result.",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 34 },
      "id": 31,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "editorMode": "code", "range": true, "expr": "sum by (instance, result) (rate(chain_verify_total{instance=~\"$node\"}[1m]))", "legendFormat": "{{instance}} {{result}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" }, "tooltip": { "mode": "single", "sort": "none" } }
    },

    {
      "type": "timeseries",
      "title": "Process CPU seconds/sec (rate)",
      "description": "CPU usage (rate) per instance.",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 43 },
      "id": 40,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "editorMode": "code", "range": true, "expr": "rate(process_cpu_seconds_total{instance=~\"$node\"}[1m])", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "cores" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" }, "tooltip": { "mode": "single", "sort": "none" } }
    },
    {
      "type": "timeseries",
      "title": "Resident memory (RSS) per node",
      "description": "process_resident_memory_bytes per instance.",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 43 },
      "id": 41,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "editorMode": "code", "range": true, "expr": "process_resident_memory_bytes{instance=~\"$node\"}", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" }, "tooltip": { "mode": "single", "sort": "none" } }
    },

    {
      "type": "timeseries",
      "title": "GC collections/sec (generation)",
      "description": "python_gc_collections_total rate per generation.",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 52 },
      "id": 50,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        { "refId": "A", "editorMode": "code", "range": true, "expr": "sum by (instance, generation) (rate(python_gc_collections_total{instance=~\"$node\"}[5m]))", "legendFormat": "{{instance}} gen={{generation}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom", "displayMode": "table" }, "tooltip": { "mode": "single", "sort": "none" } }
    },
    {
      "type": "table",
      "title": "Top paths by req/s (cluster)",
      "description": "Krótka kontrola: co najbardziej bije w API.",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 52 },
      "id": 51,
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "refId": "A",
          "editorMode": "code",
          "range": true,
          "expr": "topk(10, sum by (path) (rate(http_requests_total{instance=~\"$node\"}[1m])))"
        }
      ],
      "options": { "showHeader": true, "sortBy": [ { "displayName": "Value", "desc": true } ] },
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] }
    }
  ]
}
